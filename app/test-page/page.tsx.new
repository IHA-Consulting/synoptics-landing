"use client";

import { useEffect, useState, useRef } from "react";
import Image from "next/image";
import Link from "next/link";

const FloatingIcon = ({ src, size = 40, className }: { src: string; size?: number; className: string }) => {
  return (
    <div className={`absolute ${className} rounded-full bg-white/90 shadow-lg p-2 flex items-center justify-center z-10`} style={{ width: size, height: size }}>
      <Image src={src} alt="icon" width={size * 0.6} height={size * 0.6} />
    </div>
  );
};

export default function TestPage() {
  const [mounted, setMounted] = useState(false);
  const videoRef = useRef<HTMLDivElement>(null);
  const [isInView, setIsInView] = useState(false);

  useEffect(() => {
    setMounted(true);
    
    const observer = new IntersectionObserver(
      ([entry]) => {
        setIsInView(entry.isIntersecting);
      },
      { threshold: 0.5 }
    );

    if (videoRef.current) {
      observer.observe(videoRef.current);
    }

    return () => {
      if (videoRef.current) {
        observer.unobserve(videoRef.current);
      }
    };
  }, []);

  if (!mounted) return null;

  const videoUrl = isInView 
    ? "https://www.youtube.com/embed/MgRh-vN9ZBg?si=2cCxYwAaUmSEDIrb&autoplay=1&mute=1&rel=0"
    : "https://www.youtube.com/embed/MgRh-vN9ZBg?si=2cCxYwAaUmSEDIrb&rel=0";

  return (
    <div className="relative w-full overflow-hidden">
      <div className="relative min-h-[70vh] w-full overflow-hidden bg-gradient-to-br from-blue-50 via-indigo-50 to-blue-100">
        <div className="absolute inset-0 z-0">
          <FloatingIcon 
            src="/images/logos/microsoft.svg" 
            size={50}
            className="top-[15%] left-[10%] animate-[moveInCircle_20s_linear_infinite]" 
          />
          <FloatingIcon 
            src="/images/logos/openai.svg" 
            size={45}
            className="top-[25%] right-[15%] animate-[moveVertical_30s_ease_infinite]" 
          />
          <FloatingIcon 
            src="/images/logos/anthropic.svg" 
            size={40}
            className="bottom-[40%] left-[15%] animate-[moveHorizontal_40s_ease_infinite]" 
          />
          <FloatingIcon 
            src="/images/logos/cohere.svg" 
            size={42}
            className="top-[40%] right-[10%] animate-[moveInCircle_25s_reverse_infinite]" 
          />
          <FloatingIcon 
            src="/synoptix-icon.svg" 
            size={48}
            className="bottom-[35%] right-[20%] animate-[moveVertical_35s_ease_infinite]" 
          />
          <FloatingIcon 
            src="/globe.svg" 
            size={55}
            className="top-[10%] right-[30%] animate-[moveHorizontal_45s_ease_infinite]" 
          />
          <FloatingIcon 
            src="/file.svg" 
            size={38}
            className="bottom-[30%] left-[30%] animate-[moveInCircle_30s_linear_infinite]" 
          />
          <FloatingIcon 
            src="/window.svg" 
            size={44}
            className="top-[30%] left-[25%] animate-[moveVertical_25s_ease_infinite]" 
          />
        </div>
        
        <div className="relative z-10 flex flex-col items-center justify-center pt-20 pb-40 px-4">
          <div className="text-sm font-medium text-gray-600 mb-2">AI Powered by Microsoft</div>
          <h1 className="text-5xl md:text-6xl font-bold tracking-tight mb-4 text-center max-w-4xl">
            <span className="text-gray-900">Let AI Handle Your </span>
            <span className="text-indigo-600">Paper work</span>
          </h1>
          <p className="mt-4 text-xl text-gray-700 text-center">You Focus on What Matters</p>
          <Link href="#contact" className="mt-8 rounded-full bg-indigo-600 px-8 py-3 text-white hover:bg-indigo-700 inline-block">
            Get a Demo
          </Link>
        </div>
      </div>
      
      <div className="relative -mt-32 mx-auto max-w-5xl px-4 z-20">
        <div ref={videoRef} className="relative rounded-2xl overflow-hidden shadow-2xl aspect-video bg-white">
          <iframe
            src={videoUrl}
            title="Demo Video"
            frameBorder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowFullScreen
            className="w-full h-full absolute inset-0"
          />
          <div className="absolute inset-0 pointer-events-none">
            <div className="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 bg-white/80 rounded-full h-24 w-24 flex items-center justify-center shadow-lg z-10">
              <span className="text-3xl font-bold text-indigo-600">AI</span>
            </div>
            
            <div className="absolute left-[calc(50%-80px)] bottom-0 h-2 w-32 bg-indigo-400"></div>
            <div className="absolute left-[calc(50%+50px)] bottom-0 h-2 w-32 bg-indigo-400"></div>
            
            <div className="absolute left-[calc(50%-120px)] bottom-[-120px] h-32 w-8 bg-indigo-500"></div>
            <div className="absolute left-[calc(50%-60px)] bottom-[-100px] h-24 w-8 bg-indigo-500"></div>
            <div className="absolute left-[calc(50%+50px)] bottom-[-140px] h-40 w-8 bg-indigo-500"></div>
            <div className="absolute left-[calc(50%+100px)] bottom-[-80px] h-20 w-8 bg-indigo-500"></div>
          </div>
        </div>
      </div>
      
      <div className="h-60 bg-white w-full"></div>
    </div>
  );
}
